<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgPodcast"
        android:layout_width="@dimen/cien"
        android:layout_height="@dimen/cien"
        android:layout_marginTop="@dimen/margin_peque"
        android:layout_marginStart="@dimen/margin_peque"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_podcast"
        />

    <TextView
        android:id="@+id/tvPodcastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgPodcast"
        app:layout_constraintStart_toStartOf="@id/imgPodcast"
        android:text="@string/nombre_podcast"
        android:textSize="@dimen/margin_peque"
        />

</androidx.constraintlayout.widget.ConstraintLayout>